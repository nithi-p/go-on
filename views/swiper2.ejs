    <!-- Swiper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.0/js/swiper.min.js"></script>

    <!-- Initialize Swiper -->
    <script>

    var mySlidesAmount;
    if ($(window).width() > 800) {
       mySlidesAmount = '5';
    }
    else if ($(window).width() < 500){
       mySlidesAmount = '3';
    }else {
      mySlidesAmount = '4';
    }


     var settings = {
        slidesPerView: mySlidesAmount,
        freeMode: true,
        centeredSlides: true,
        observer: true,
        spaceBetween: 10,
        nextButton: '.swiper-button-next',
        prevButton: '.swiper-button-prev',
        grabCursor: true,
        autoplay: 2500,
        loop: false,
        direction: 'vertical',
        initialSlide:0
    };

    var mySwiper = new Swiper('.swiper-container', settings);


    </script>



