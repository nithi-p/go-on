<div class="swiper-container">
  <div class="verti"></div>
        <div class="swiper-wrapper">



         <div class="swiper-slide">
           
          <span class="slot start"><i class="heart icon blink_me"></i></span>
        </div> 


           <div class="swiper-slide"  ng-repeat="slot in dates | orderBy:'ref' ">
             
            <a ng-click="!slot.fullname ? sign($index) : cannot()">
            <span class="{{(slot.fullname) ? 'slot reserved' : 'slot' }}">
              {{(slot.fullname) ? slot.fullname : slot.date }}
            </span>
           </a>


           </div>

         
